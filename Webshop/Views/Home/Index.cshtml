@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center">
    <div>
        <h2>
            Probably the best cupcakes in the world
        </h2>
    </div>
    <section>
        <div id="cupCakeCarousel" class="carousel slide" data-ride="carousel" data-interval="3500">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="box col-lg-10 mx-auto">
                        <img src="Images/carousel1.jpg" alt="First slide">
                        <p class="lead">Nothing says "I love you" more than a cupcake from Cupcake King</p>
                    </div>
                    </div>
                <div class="carousel-item">
                    <div class="box col-lg-10 mx-auto">
                        <img src="Images/carousel2.jpg" alt="Second slide">
                        <p class="lead">Our frosted cupcakes are certified to make your mouth water</p>
                    </div>
                    </div>
                <div class="carousel-item">
                    <div class="box col-lg-10 mx-auto">
                        <img src="Images/carousel3.jpg" alt="Third slide">
                        <p class="lead">And they are designed with utmost care by our professional pastry chefs</p>
                    </div>
                    </div>
                </div>
            <div class="carouselbox">
                <a class="carousel-control-prev" href="#cupCakeCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#cupCakeCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </section>
</div>






