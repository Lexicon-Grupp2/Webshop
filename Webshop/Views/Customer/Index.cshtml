@model List<Order>

@{
    ViewData["Title"] = "Index";
}

<div class="container">

    <div class="px-4 py-5 my-5 text-center">
        <img class="d-block mx-auto mb-4" src="~/Images/cupcakes_cart.jpg" alt="" width="364" height="170" />
        <h1 class="display-5 fw-bold">Your previous orders</h1>
        <div class="col-lg-6 mx-auto">
            <p class="lead mb-4">View your previous orders, the details of each order and the receipts. You can save each receipt as a PDF and print it for your convenience.</p>
        </div>
    </div>

    <div class="table-responsive table-striped">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Order ID</th>
                    <th>Paid</th>
                    <th>Total Cost</th>

                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td class="col-sm-3 col-md-3">
                            <h5 class="mt-0 text-primary">@Html.DisplayFor(modelItem => item.OrderDate)</h5>
                        </td>
                        <td class="col-sm-3 col-md-3">
                            <h5 class="mt-0 text-primary">@Html.DisplayFor(modelItem => item.OrderId)</h5>
                        </td>
                        <td class="col-sm-3 col-md-3">
                            <h5 class="mt-0 text-primary">@Html.DisplayFor(modelItem => item.Paid)</h5>
                        </td>
                        <td class="col-sm-3 col-md-3">
                            <h5 class="mt-0 text-primary">@Html.DisplayFor(modelItem => item.TotalCost) SEK</h5>
                        </td>
                        <td>
                            <a class="btn btn btn-primary" asp-route-id="@item.OrderId" asp-action="Details">Details</a>
                        </td>
                        <td>
                            <a class="btn btn-outline-secondary" asp-route-id="@item.OrderId" asp-controller="Customer" asp-action="Receipt">Receipt</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <div class="container my-5">
        <a class="btn btn-primary" href="Identity/Account/Manage">Manage your account details / adress</a>
    </div>
</div>