@model Webshop.Viewmodels.EditCategoryViewModel

    <partial name="_ErrorMessagePartial", model="@Model.ErrorMessage" />

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" id="update-profile-button" value="Save changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>